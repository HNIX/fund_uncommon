<!-- This example requires Tailwind CSS v2.0+ -->
<div class="max-w-lg mx-auto">
  <h2 class="text-lg font-medium text-gray-900">Sources</h2>
  <p class="mt-1 text-sm text-gray-500">View your sources and map fields for each source.</p>
  <ul role="list" class="mt-6 border-t border-gray-200 divide-y divide-gray-200">
    <% sources.each do |source| %>
        <%= link_to pipeline_source_path(@pipeline, source), class: "block hover:bg-gray-50" do %>
        <li class="flow-root">
        <div class="relative group py-4 flex items-start space-x-3">
            <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-lg bg-pink-500">
                <!-- Heroicon name: outline/speakerphone -->
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                </svg>
            </span>
            </div>
            <div class="min-w-0 flex-1">
            <div class="text-sm font-medium text-gray-900">
                
                <span class="absolute inset-0" aria-hidden="true"></span>
                <%= source.name %>
            </div>
            <p class="text-sm text-gray-500"><%= source.created_at %></p>
            </div>
            <div class="flex-shrink-0 self-center">
            <!-- Heroicon name: solid/chevron-right -->
            <svg class="h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            </div>
        </div>
        </li>
        <% end %>
    <% end %>
  </ul>
  
</div>